<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.auto_gui.HelloController">

    <!-- Lewy panel: ustawienia silnika, skrzyni, auta -->
    <left>
        <ScrollPane fitToWidth="true">
            <VBox spacing="12" BorderPane.alignment="TOP_LEFT" >
                <padding><Insets top="15" left="15" right="15" bottom="15"/></padding>

                <Label text="PARAMETRY AUTA" style="-fx-font-size:18; -fx-font-weight:bold;"/>

                <Label text="Nazwa:" />
                <TextField fx:id="tfNazwa" editable="false" />

                <Label text="Ilość biegów:" />
                <TextField fx:id="tfIloscBiegow" editable="false" />

                <Label text="Aktualny bieg:" />
                <TextField fx:id="tfAktualnyBieg" editable="false" />

                <Label text="Obroty silnika:" />
                <TextField fx:id="tfObrotySilnika" editable="false" />

                <Separator />
                <Label text="STEROWANIE" style="-fx-font-size:16; -fx-font-weight:bold;"/>

                <HBox spacing="10">
                    <Button text="Zwiększ bieg" fx:id="btnZwiekszBieg" onAction="#onZwiekszBieg"/>
                    <Button text="Zmniejsz bieg" fx:id="btnZmniejszBieg" />
                </HBox>

                <HBox spacing="10">
                    <Button text="Wciśnij sprzęgło" fx:id="btnWcisnijSprzeglo" />
                    <Button text="Zwolnij sprzęgło" fx:id="btnZwolnijSprzeglo" />
                </HBox>

                <HBox spacing="10">
                    <Button text="Włącz silnik" fx:id="btnWlaczSilnik" />
                    <Button text="Wyłącz silnik" fx:id="btnWylaczSilnik" />
                </HBox>

                <HBox spacing="10">
                    <Button text="Włącz auto" fx:id="btnWlaczAuto" />
                    <Button text="Wyłącz auto" fx:id="btnWylaczAuto" />
                </HBox>

            </VBox>
        </ScrollPane>
    </left>

    <!-- Góra: lista aut -->
    <top>
        <HBox spacing="15" BorderPane.alignment="CENTER_RIGHT">
            <padding><Insets top="10" left="10" right="10" bottom="10"/></padding>

            <Label text="Wybierz obiekt:" />
            <ComboBox fx:id="comboSamochody" prefWidth="220" />
            <Button text="dodaj auto" fx:id="btnDodajAuto" onAction="#onDodajAuto"/>
        </HBox>
    </top>

    <!-- Prawa strona: duża plansza pod wizualizację -->
    <center>
        <VBox BorderPane.alignment="CENTER" spacing="10">
            <padding><Insets top="10" left="10" right="10" bottom="10"/></padding>
            <Label text="PLANSZA OBIEKTÓW" style="-fx-font-size:18; -fx-font-weight:bold;"/>
            <Pane fx:id="canvasPane" prefWidth="500" prefHeight="600" style="-fx-border-color: gray; -fx-border-width: 2; -fx-background-color: #f0f0f0;" />
        </VBox>
    </center>

</BorderPane>
